@model List<FindYourFit.Models.EventCategory>

<h1>All Categories</h1>

@if (Model.Count == 0)
    {
        <p>No Categories yet!</p>
    }
    else
    {
    <table class="table; text-light">
        <tr>
            <th>Id
            <th>Category Name</th>
        </tr>
        @foreach (EventCategory category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
    </table>
    }
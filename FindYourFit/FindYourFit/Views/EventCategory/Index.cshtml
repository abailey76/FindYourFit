@model List<FindYourFit.Models.EventCategory>
<body style="background-color:darkslategrey"></body>
<h1 class="text-light">All Categories</h1>

<p>
    <a style="color:lightskyblue" asp-controller="EventCategory" asp-action="Create">Add Category</a>
</p>

@if (Model.Count == 0)
    {
        <p class="text-light">No Categories yet!</p>
    }
    else
    {
    <table class="table">
        <tr>
            <th class="text-light">Id
            <th class="text-light">Category Name</th>
        </tr>
        @foreach (EventCategory category in Model)
        {
            <tr>
                <td class="text-light">@category.Id</td>
                <td class="text-light">@category.Name</td>
            </tr>
        }
    </table>
    }
@model List<FindYourFit.Models.Tag>
<body style="background-color:darkslategrey"></body>
<h1 class="text-light">All Event Tags</h1>

<p>
    <a asp-controller="Tag" asp-action="Add">Add Tag</a>
</p>

@if (Model.Count == 0)
{
    <p class="text-light">No tags yet!</p>
}
else
{
    <table class="table; text-light">
        <tr>
            <th>Id
            <th>Tag Name</th>
        </tr>
        @foreach (Tag tag in Model)
        {
            <tr>
                <td>@tag.Id</td>
                <td><a asp-controller="Tag" asp-action="Detail" asp-route-id="@tag.Id">@tag.Name</a></td>
            </tr>
        }
    </table>
}
@model List<FindYourFit.Models.Tag>
<body style="background-color:darkslategrey"></body>
<h1 class="text-light">All Tags</h1>

<p>
    <a style="color:lightskyblue" asp-controller="Tag" asp-action="Add">Add Tag</a>
</p>

@if (Model.Count == 0)
{
    <p class="text-light">No tags yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th class="text-light">Id
            <th class="text-light">Tag Name</th>
        </tr>
        @foreach (Tag tag in Model)
        {
            <tr>
                <td class="text-light">@tag.Id</td>
                <td class="text-light"><a asp-controller="Tag" asp-action="Detail" asp-route-id="@tag.Id">@tag.Name</a></td>
            </tr>
        }
    </table>
}
@model List<FindYourFit.Models.Event>
<body style="background-color:darkslategrey"></body>
<h1 class="text-light">Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>


<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@if (Model.Count == 0)
{
    <p class="text-light">No events yet!</p>
}
else
{
    <table class="table; text-light">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Contact Email
            </th>
            <th>
                Category
            </th>
        </tr>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Id</td>
                <td><a asp-controller="Events" asp-action="Detail" asp-route-id="@evt.Id">@evt.Name</a></td>
                <td>@evt.Description</td>
                <td>@evt.ContactEmail</td>
                <td>@evt.Category.Name</td>
            </tr>
        }
    </table>
}


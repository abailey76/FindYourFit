@model FindYourFit.ViewModels.AddFitnessResourceViewModel;
<body style="background-color:darkslategrey"></body>
<h1 class="text-light">Add Fitness Resource</h1>

<form asp-controller="FitnessResource" asp-action="Add" method="post">
    <div class="form-group; text-light">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group; text-light">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group; text-light">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" />
    </div>
    <div class="form-group; text-light">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="Model.Categories"></select>
    </div>
    <input type="submit" value="Add Fitness Resource" />
</form>

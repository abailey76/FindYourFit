@model List<FindYourFit.Models.FitnessResource>

<h1>Add Fitness Resource</h1>

<p>
    <a asp-controller="FitnessResources" asp-action="Add">Add Resource</a>
</p>

<p>
    <a asp-controller="FitnessResources" asp-action="Delete">Delete Resource</a>
</p>

@if (Model.Count == 0)
{
    <p>No resources yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Contact Email
            </th>
            <th>
                Category
            </th>
        </tr>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Id</td>
                <td><a asp-controller="FitnessResources" asp-action="Detail" asp-route-id="@evt.Id">@evt.Name</a></td>
                <td>@evt.Description</td>
                <td>@evt.ContactEmail</td>
                <td>@evt.Category.Name</td>
            </tr>
        }
    </table>
}

@model List<FindYourFit.Models.FitnessResource>
<body style="background-color:darkslategrey"></body>
<h1 class="text-light">Add Fitness Resource</h1>

<p>
    <a style="color:lightskyblue" asp-controller="FitnessResources" asp-action="Add">Add Resource</a>
</p>

<p>
    <a style="color:lightskyblue" asp-controller="FitnessResources" asp-action="Delete">Delete Resource</a>
</p>

@if (Model.Count == 0)
{
    <p class="text-light">No resources yet!</p>
}
else
{
    <table class="table; text-light">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            @*<th>
                Contact Email
            </th>*@
            <th>
                Category
            </th>
        </tr>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Id</td>
                <td><a asp-controller="FitnessResources" asp-action="Detail" asp-route-id="@evt.Id">@evt.Name</a></td>
                <td>@evt.Description</td>
                @*<td>@evt.ContactEmail</td>*@
                <td>@evt.Category.Name</td>
            </tr>
        }
    </table>
}
